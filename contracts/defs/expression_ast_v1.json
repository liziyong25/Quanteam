{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/defs/expression_ast_v1.json",
  "title": "expression_ast_v1",
  "description": "Common Expression AST v1 used by both Signal DSL and Variable Dictionary compute graphs. Declarative only.",
  "oneOf": [
    { "$ref": "#/$defs/expr_var" },
    { "$ref": "#/$defs/expr_const" },
    { "$ref": "#/$defs/expr_param" },
    { "$ref": "#/$defs/expr_op" }
  ],
  "$defs": {
    "expr_var": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "var_id"],
      "properties": {
        "type": { "const": "var" },
        "var_id": {
          "type": "string",
          "description": "Variable id (typically from variable_dictionary)."
        }
      }
    },
    "expr_const": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "value"],
      "properties": {
        "type": { "const": "const" },
        "value": {
          "type": ["number", "string", "boolean", "null"],
          "description": "Literal constant."
        }
      }
    },
    "expr_param": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "param_id"],
      "properties": {
        "type": { "const": "param" },
        "param_id": {
          "type": "string",
          "description": "Parameter id resolved from a params dictionary."
        }
      }
    },
    "expr_op": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "op", "args"],
      "properties": {
        "type": { "const": "op" },
        "op": {
          "type": "string",
          "description": "Operation name (e.g. gt, and, sma)."
        },
        "args": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "https://quant-eam.local/contracts/defs/expression_ast_v1.json" },
          "description": "Recursive arguments."
        }
      }
    }
  }
}

