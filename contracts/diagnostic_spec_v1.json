{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/diagnostic_spec_v1.json",
  "title": "diagnostic_spec_v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "diagnostic_id",
    "run_id",
    "title",
    "objective",
    "checks"
  ],
  "properties": {
    "schema_version": {
      "const": "diagnostic_spec_v1"
    },
    "diagnostic_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]{2,63}$"
    },
    "run_id": {
      "type": "string",
      "pattern": "^[0-9a-z]{6,64}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "objective": {
      "type": "string",
      "minLength": 1
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "metrics_path": {
          "type": "string",
          "minLength": 1
        },
        "gate_results_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "check_id",
          "metric_key",
          "operator",
          "threshold",
          "severity"
        ],
        "properties": {
          "check_id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9_.-]{2,63}$"
          },
          "metric_key": {
            "type": "string",
            "minLength": 1
          },
          "operator": {
            "type": "string",
            "enum": [
              "lt",
              "le",
              "gt",
              "ge",
              "eq",
              "ne"
            ]
          },
          "threshold": {
            "type": "number"
          },
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "error"
            ]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
