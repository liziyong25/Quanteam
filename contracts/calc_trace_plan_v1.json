{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/calc_trace_plan_v1.json",
  "title": "calc_trace_plan_v1",
  "type": "object",
  "additionalProperties": true,
  "$comment": "A declarative plan for demo/trace visualization. This is not a runner; it only describes what to sample and render.",
  "required": ["schema_version", "samples", "steps"],
  "properties": {
    "schema_version": {
      "const": "calc_trace_plan_v1",
      "description": "Schema version discriminator. Must be exactly 'calc_trace_plan_v1'."
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true,
      "description": "Forward-compatible extension area. Must not be used to override governance/policies."
    },
    "samples": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/sample" }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/step" }
    },
    "assertions": {
      "type": "array",
      "items": { "$ref": "#/$defs/assertion" },
      "description": "Optional assertions evaluated by the kernel/trace runner."
    }
  },
  "$defs": {
    "sample": {
      "type": "object",
      "additionalProperties": true,
      "required": ["symbols", "start", "end", "max_rows"],
      "properties": {
        "symbols": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "start": { "type": "string", "format": "date" },
        "end": { "type": "string", "format": "date" },
        "max_rows": { "type": "integer", "minimum": 1 }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": true,
      "required": ["step_id", "title", "type", "render", "variables"],
      "properties": {
        "step_id": { "type": "string" },
        "title": { "type": "string" },
        "type": {
          "type": "string",
          "description": "Step category (e.g. compute/table/plot)."
        },
        "render": {
          "type": "object",
          "additionalProperties": true,
          "required": ["mode"],
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["table", "plot", "text"]
            }
          }
        },
        "variables": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" },
          "description": "Variable ids to render in this step."
        }
      }
    },
    "assertion": {
      "type": "object",
      "additionalProperties": true,
      "required": ["assertion_id", "type"],
      "properties": {
        "assertion_id": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["lag_enforced"],
          "description": "Assertion type."
        },
        "variables": {
          "type": "array",
          "items": { "type": "string" }
        },
        "min_lag_bars": {
          "type": "integer",
          "minimum": 1,
          "description": "Required for lag_enforced."
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "lag_enforced" } },
            "required": ["type"]
          },
          "then": { "required": ["variables", "min_lag_bars"] }
        }
      ]
    }
  }
}
