{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/data_snapshot_manifest_schema_v1.json",
  "title": "data_snapshot_manifest_v1",
  "type": "object",
  "additionalProperties": true,
  "$comment": "Data snapshot manifest for the DataLake. This is a reproducibility/audit contract (SSOT for snapshot contents), not a business arbitration contract.",
  "required": ["schema_version", "snapshot_id", "created_at", "datasets"],
  "properties": {
    "schema_version": { "const": "data_snapshot_manifest_v1" },
    "snapshot_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "extensions": {
      "type": "object",
      "additionalProperties": true,
      "description": "Forward-compatible metadata only."
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "dataset_id",
          "file",
          "row_count",
          "fields",
          "symbols",
          "dt_min",
          "dt_max",
          "available_at_min",
          "available_at_max",
          "sha256"
        ],
        "properties": {
          "dataset_id": { "type": "string", "minLength": 1 },
          "file": { "type": "string", "minLength": 1 },
          "row_count": { "type": "integer", "minimum": 0 },
          "fields": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "symbols": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "dt_min": { "type": "string", "minLength": 1 },
          "dt_max": { "type": "string", "minLength": 1 },
          "available_at_min": { "type": "string", "minLength": 1 },
          "available_at_max": { "type": "string", "minLength": 1 },
          "sha256": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$",
            "description": "sha256 of the dataset file."
          },
          "extensions": {
            "type": "object",
            "additionalProperties": true,
            "description": "Forward-compatible metadata only (e.g. duplicate_count, asof policy id, quality report refs)."
          }
        }
      }
    }
  }
}

