{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/agent_run_schema_v1.json",
  "title": "agent_run_v1",
  "type": "object",
  "additionalProperties": true,
  "$comment": "AgentRun is an audit record produced by an agent harness. It must reference inputs/outputs by path and hash; it must not arbitrate PASS/FAIL or modify policies.",
  "required": [
    "schema_version",
    "agent_id",
    "agent_version",
    "provider",
    "input_ref",
    "input_sha256",
    "output_refs"
  ],
  "properties": {
    "schema_version": { "const": "agent_run_v1" },
    "extensions": { "type": "object", "additionalProperties": true },
    "agent_id": { "type": "string", "minLength": 1 },
    "agent_version": { "type": "string", "minLength": 1 },
    "provider": { "type": "string", "enum": ["mock", "external"] },
    "created_at": { "type": "string", "description": "Optional timestamp (should use SOURCE_DATE_EPOCH for determinism)." },
    "notes": { "type": "string" },
    "input_ref": { "type": "string", "minLength": 1 },
    "input_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "output_refs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    }
  }
}

