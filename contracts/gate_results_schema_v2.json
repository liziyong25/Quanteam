{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/gate_results_schema_v2.json",
  "title": "gate_results_v2",
  "type": "object",
  "additionalProperties": true,
  "$comment": "Gate results are arbitration evidence derived from a dossier + policies. PASS/FAIL must reference dossier artifacts. v2 closes the schema gap around per-segment gating output (segment_results) and keeps holdout output minimal (pass/fail + tiny summary only).",
  "required": ["schema_version", "run_id", "gate_suite_id", "overall_pass", "results"],
  "properties": {
    "schema_version": {
      "const": "gate_results_v2",
      "description": "Schema version discriminator. Must be exactly 'gate_results_v2'."
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true,
      "description": "Forward-compatible extension area. Must not be used to override governance/policies."
    },
    "run_id": { "type": "string" },
    "gate_suite_id": { "type": "string" },
    "overall_pass": { "type": "boolean" },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/gate_result_item" }
    },
    "segment_results": {
      "type": "array",
      "minItems": 1,
      "$comment": "Optional. When present, provides per-segment gating results + artifact refs for segment-level evidence.",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["segment_id", "kind", "holdout", "overall_pass", "gates"],
        "properties": {
          "segment_id": { "type": "string" },
          "kind": { "type": "string", "enum": ["train", "test", "holdout"] },
          "holdout": { "type": "boolean" },
          "overall_pass": { "type": "boolean" },
          "invalid": { "type": "boolean" },
          "error": { "type": "string" },
          "gates": {
            "type": "array",
            "items": { "$ref": "#/$defs/gate_result_item" }
          },
          "artifacts": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "description": "Segment evidence artifacts (typically under segments/<segment_id>/...)."
          }
        }
      }
    },
    "holdout_summary": {
      "type": "object",
      "additionalProperties": true,
      "required": ["pass", "summary"],
      "properties": {
        "pass": { "type": "boolean" },
        "summary": {
          "type": "string",
          "maxLength": 240,
          "description": "Minimal 1-2 line summary only. Must not leak holdout internals (no curves/trades)."
        },
        "metrics_minimal": { "type": "object", "additionalProperties": true }
      }
    }
  },
  "$defs": {
    "gate_result_item": {
      "type": "object",
      "additionalProperties": true,
      "required": ["gate_id", "gate_version", "pass", "metrics"],
      "properties": {
        "gate_id": { "type": "string" },
        "gate_version": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["pass", "fail", "skipped"],
          "description": "Optional explicit status. If omitted, infer from pass==true/false."
        },
        "pass": { "type": "boolean" },
        "metrics": { "type": "object", "additionalProperties": true },
        "thresholds": { "type": "object", "additionalProperties": true },
        "evidence": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "artifacts": { "type": "array", "items": { "type": "string" } },
            "notes": { "type": "string" }
          }
        }
      }
    }
  }
}

