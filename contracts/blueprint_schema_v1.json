{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quant-eam.local/contracts/blueprint_schema_v1.json",
  "title": "blueprint_v1",
  "type": "object",
  "additionalProperties": true,
  "$comment": "Blueprint is declarative and statically analyzable. It must reference policies by id only (no inline policy content). It does not decide strategy validity.",
  "required": [
    "schema_version",
    "blueprint_id",
    "title",
    "universe",
    "bar_spec",
    "policy_bundle_id",
    "data_requirements",
    "strategy_spec",
    "evaluation_protocol",
    "report_spec"
  ],
  "properties": {
    "schema_version": {
      "const": "blueprint_v1",
      "description": "Schema version discriminator. Must be exactly 'blueprint_v1'."
    },
    "extensions": {
      "type": "object",
      "additionalProperties": true,
      "description": "Forward-compatible extension area. Must not be used to override governance/policies."
    },
    "blueprint_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_.-]+$"
    },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "policy_bundle_id": {
      "type": "string",
      "description": "Read-only policy bundle reference (by id)."
    },
    "universe": {
      "type": "object",
      "additionalProperties": true,
      "required": ["asset_pack", "symbols", "timezone", "calendar"],
      "properties": {
        "asset_pack": { "type": "string" },
        "symbols": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "timezone": { "type": "string" },
        "calendar": { "type": "string" }
      }
    },
    "bar_spec": {
      "type": "object",
      "additionalProperties": true,
      "required": ["frequency"],
      "properties": {
        "frequency": {
          "type": "string",
          "description": "Bar frequency (e.g. 1d, 1h)."
        }
      }
    },
    "data_requirements": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/data_requirement" }
    },
    "strategy_spec": {
      "$ref": "https://quant-eam.local/contracts/signal_dsl_v1.json",
      "description": "Strategy DSL (v1 uses signal_dsl_v1)."
    },
    "evaluation_protocol": {
      "type": "object",
      "additionalProperties": true,
      "required": ["segments", "purge", "embargo", "gate_suite_id"],
      "properties": {
        "segments": {
          "type": "object",
          "additionalProperties": true,
          "required": ["train", "test", "holdout"],
          "properties": {
            "train": { "$ref": "#/$defs/segment" },
            "test": { "$ref": "#/$defs/segment" },
            "holdout": { "$ref": "#/$defs/segment" }
          }
        },
        "purge": {
          "type": "object",
          "additionalProperties": true,
          "required": ["bars"],
          "properties": {
            "bars": { "type": "integer", "minimum": 0 }
          }
        },
        "embargo": {
          "type": "object",
          "additionalProperties": true,
          "required": ["bars"],
          "properties": {
            "bars": { "type": "integer", "minimum": 0 }
          }
        },
        "gate_suite_id": {
          "type": "string",
          "description": "Read-only gate suite reference (by id)."
        }
      }
    },
    "report_spec": {
      "type": "object",
      "additionalProperties": true,
      "required": ["plots", "tables", "trace"],
      "properties": {
        "plots": { "type": "boolean" },
        "tables": { "type": "boolean" },
        "trace": {
          "type": "boolean",
          "description": "Enable calc trace (demo) artifacts."
        }
      }
    }
  },
  "$defs": {
    "segment": {
      "type": "object",
      "additionalProperties": true,
      "required": ["start", "end"],
      "properties": {
        "start": { "type": "string", "format": "date" },
        "end": { "type": "string", "format": "date" },
        "as_of": {
          "type": "string",
          "format": "date-time",
          "description": "Optional as-of timestamp for availability semantics."
        }
      }
    },
    "data_requirement": {
      "type": "object",
      "additionalProperties": true,
      "required": ["dataset_id", "fields", "frequency", "adjustment", "asof_rule"],
      "properties": {
        "dataset_id": { "type": "string" },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "frequency": { "type": "string" },
        "adjustment": {
          "type": "string",
          "description": "Adjustment policy label (read-only intent)."
        },
        "asof_rule": {
          "type": "object",
          "additionalProperties": true,
          "required": ["mode"],
          "properties": {
            "mode": { "type": "string", "enum": ["asof", "latest_before", "strict"] }
          }
        }
      }
    }
  }
}
